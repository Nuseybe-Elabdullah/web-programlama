@model GymManagementSystem.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon">
                <i class="bi bi-person-plus"></i>
            </div>
            <h2>Hesap Oluştur</h2>
        </div>
        
        <div class="auth-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group">
                    <label asp-for="FullName" class="form-label">Tam Ad</label>
                    <input asp-for="FullName" class="form-control" placeholder="Adınız ve Soyadınız" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email" class="form-label">E-posta Adresi</label>
                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="password-strength">
                        <strong style="color: #f5576c;"><i class="bi bi-shield-check me-1"></i>Güçlü Şifre Oluşturun</strong>
                        <ul>
                            <li>En az 6 karakter uzunluğunda</li>
                            <li>Büyük ve küçük harf içermeli</li>
                            <li>Rakam ve özel karakter önerilir</li>
                        </ul>
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Şifre Onayı</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi tekrar girin" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn-register">
                    <i class="bi bi-person-plus me-2"></i>
                    Kayıt Ol
                </button>
            </form>
            
            <div class="divider">
                <span>veya</span>
            </div>
            
            <div class="login-link">
                <p>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yapın</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

